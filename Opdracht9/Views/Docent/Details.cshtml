@model Opdracht9.Models.Docent

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Docent</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Afkorting)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Afkorting)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Voorletters)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Voorletters)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Achternaam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Achternaam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Emailadres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Emailadres)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Geboortedatum)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Geboortedatum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Postcode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Postcode)
        </dd>
    </dl>
    <h4>SLB studenten</h4>
    @if(Model.Studenten == null || Model.Studenten.Count == 0 )
    {
        <p>@Model.Achternaam is geen SLB-er</p>
    }
    else
    {
    <table class="table" style="width:60%">
        <tr>
            <th>Studentnummer</th>
            <th>Voornaam</th>
            <th>Achternaam</th>
            <th>Klas</th>
        </tr>
    @foreach(var std in Model.Studenten)
    {
        <tr>
            <td>@std.Studentnummer</td>
            <td>@std.Voornaam</td>
            <td>@std.Achternaam</td>
            <td>@std.Klas.Omschrijving</td>
        </tr>
    }
    </table>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
