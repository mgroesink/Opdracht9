@model Opdracht9.Models.Klas

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Klas</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Omschrijving)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Omschrijving)
        </dd>
    </dl>
    <table class="table">
        <tr>
            <th>Studentnummer</th>
            <th>Voornaam</th>
            <th>Achternaam</th>
            <th>Geboortedatum</th>
        </tr>
        @foreach(var std in Model.Students)
        {
            <tr>
                <td>@std.Studentnummer</td>
                <td>@std.Voornaam</td>
                <td>@std.Achternaam</td>
                <td>@std.Geboortedatum.ToShortDateString()</td>
            </tr>
        }
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
